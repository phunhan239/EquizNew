<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:editTextColor">@color/editTextColor</item>-->
        <!--<item name="android:textColorPrimary">@color/textColorPrimary</item>-->
        <!--<item name="android:textColorSecondary">@color/textColorSecondary</item>-->
        <!--<item name="android:textColorTertiary">@color/textColorTertiary</item>-->
        <!--<item name="android:textColorPrimaryInverse">@color/textColorPrimaryInverse</item>-->
        <!--<item name="android:textColorSecondaryInverse">@color/textColorSecondaryInverse</item>-->
        <!--<item name="android:textColorTertiaryInverse">@color/textColorTertiaryInverse</item>-->
        <!--<item name="android:textColorPrimaryDisableOnly">@color/textColorPrimaryDisableOnly</item>-->
    </style>
    <!--start main activity-->
    <style name="container_mainlayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_main</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--end main activity-->
    <!--start widget of main activity-->
    <style name="ll_copyright_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tv_copyright_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/textview.text.copyright</item>
        <item name="android:textColor">@color/textColorTextViewCopyright</item>
    </style>

    <style name="ll_imageview_quiz_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="img_quiz_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/img_quiz</item>
    </style>
    <!--start linear layout button-->
    <style name="ll_buttonmain">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <!--end linear layout button-->

    <!--start bg_button_main-->
    <style name="btn_main_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <!--<item name="android:background">@drawable/ripple_effect</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <!--end bg_button_gioithieu-->
    <!--end widget of main activity-->
    <!--start thi activity-->
    <style name="container_thi_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_main</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--end thi activity -->
    <!--start widget of thi activity-->
    <!--start linear layout inforquestion-->
    <style name="ll_inforquestion_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="tv_totalquestion_style">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/textColorTextViewTotalQuestion</item>
    </style>

    <style name="tv_currentquestion_style">
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/textColorTextViewCurrentQuestion</item>
    </style>
    <!--end linear layout inforquestion-->
    <!--start linear layout processing bar timer-->
    <style name="ll_progressbar_time_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="tv_watch_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/textColorTextViewWatch</item>
    </style>
    <!--end linear layout processing bar timer-->
    <!--start linear layout questioncontent-->
    <style name="ll_questioncontent_style">
        <item name="android:background">@drawable/bg_question_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="tv_questioncontent_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:text">1. CAD is the abbreviation of……</item>
        <item name="android:textColor">@color/textColorTextViewQuestionContent</item>
    </style>
    <!--end linear layout questioncontent-->
    <!--start linear layout listanswer-->
    <style name="ll_listanswer_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--end linear layout listanswer-->
    <!--start list view answer-->
    <style name="lv_answer_style">
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">5dp</item>
    </style>
    <!--end list view answer-->
    <!--start list view item layout-->
    <style name="listview_answer_theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_transition_item_listview</item>
    </style>

    <style name="textview_abcd">
        <item name="android:textColor">@color/textColorTextViewAbcd</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/bg_abcd</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="textview_item_list_answer">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/textColorTextViewItemListAnswer</item>
    </style>
    <!--end list view item layout-->
    <!--start fab pause exam-->
    <style name="fab_pauseexam_style">
        <item name="android:text">@string/fab.text.dungthi</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>
    <!--end fab pause exam-->
    <!--end widget of thi activity-->
    <!--start linear layout wrap-->
    <style name="ll_resultlayout_style">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">7</item>
    </style>
    <!--end linear layout wrap-->
    <style name="ll_ratingbar_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="ratingBar_score_style" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">70dp</item>
        <item name="android:maxHeight">70dp</item>
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">4</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="tv_numbercorrectanswer_style">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/textColorTextViewSocautraloidung</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/textview.text.socautraloidung</item>
        <item name="android:gravity">center</item>
    </style>
    <!--start text view your score text-->
    <style name="tv_yourscore_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorTextViewYourScoreText</item>
        <item name="android:text">@string/textview.text.yourscore</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--end text view your score text-->
    <!--start text view your score number-->
    <style name="tv_scorenumber_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center</item>
        <item name="android:text">8</item>
        <item name="android:textSize">120dp</item>
        <item name="android:textColor">@color/textColorTextViewScoreNumber</item>
    </style>
    <!--end text view your score number-->
    <!--start relative layout close-->
    <style name="rl_closebutton_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <!--end relative layout close-->
    <!--start text view close-->
    <style name="tv_closebutton_style">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/img_close_blue</item>
    </style>
    <!--end text view close-->
    <!--end result activity-->
</resources>
